<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="188dp"
    android:background="#00000000"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#025698">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="50"
            android:padding="10dp">

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/info_box_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="FIRST Festival of Champions"
                android:textAllCaps="true"
                android:textSize="25sp" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/info_box_event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/info_box_event_name"
                android:text="1/1/1990"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/event_box_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_above="@+id/info_box_event_type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/info_box_event_date"
                android:text="Team 9999 was rank "
                android:textAllCaps="true"
                android:textSize="18sp" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/info_box_event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="fim"
                android:textAllCaps="true"
                android:textSize="15sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>