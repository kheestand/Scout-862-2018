<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/interactive_field_picture_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/interactive_field_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/field_2018" />

        <RelativeLayout
            android:id="@+id/interactive_field_color_layer"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true">

                <CheckBox
                    android:id="@+id/interactive_field_colorbox_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/interactive_field_colorbox_5"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/interactive_field_colorbox_5"
                    android:layout_marginTop="57dp"
                    tools:layout_editor_absoluteX="284dp"
                    tools:layout_editor_absoluteY="153dp" />

                <CheckBox
                    android:id="@+id/interactive_field_colorbox_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="61dp"
                    tools:layout_editor_absoluteX="284dp"
                    tools:layout_editor_absoluteY="58dp" />

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/interactive_field_colorbox_6"
                    android:layout_toStartOf="@+id/interactive_field_colorbox_6">

                    <CheckBox
                        android:id="@+id/interactive_field_colorbox_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/interactive_field_colorbox_1"
                        android:layout_alignStart="@+id/interactive_field_colorbox_1"
                        android:layout_below="@+id/interactive_field_colorbox_1"
                        android:layout_marginTop="40dp"
                        android:checked="false"
                        tools:layout_editor_absoluteX="183dp"
                        tools:layout_editor_absoluteY="141dp" />

                    <CheckBox
                        android:id="@+id/interactive_field_colorbox_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="71dp"
                        android:layout_marginRight="71dp"
                        android:layout_marginTop="70dp"
                        android:checked="false"
                        tools:layout_editor_absoluteX="183dp"
                        tools:layout_editor_absoluteY="70dp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="179dp"
                android:layout_marginRight="179dp">

                <CheckBox
                    android:id="@+id/interactive_field_colorbox_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="70dp"
                    tools:layout_editor_absoluteX="390dp"
                    tools:layout_editor_absoluteY="70dp" />

                <CheckBox
                    android:id="@+id/interactive_field_colorbox_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/interactive_field_colorbox_3"
                    android:layout_marginTop="40dp"
                    tools:layout_editor_absoluteX="390dp"
                    tools:layout_editor_absoluteY="141dp" />
            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/interactive_field_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/interactive_field_picture_container"
        android:orientation="horizontal">

        <Button
            android:id="@+id/interactive_field_rotate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flip Field" />

        <Button
            android:id="@+id/interactive_field_randomize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Switch Colors" />

        <Button
            android:id="@+id/interactive_field_scout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scout Field" />

    </LinearLayout>

</RelativeLayout>